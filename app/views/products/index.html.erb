<h1 class="text-2xl font-bold my-2"><%= t ".title" %></h1>

<%= link_to "Login", new_session_path, class: "btn btn-md btn-primary" unless authenticated? %>
<%= link_to "New Product", new_product_path, class: "btn btn-md btn-primary" if authenticated? %>

<div id="products" class="my-2">
  <ul>
    <% @products.each do |product| %>
      <li>
        <div class="underline py-1 my-1">
          <%= link_to product.name, product %>
        </div>
      </li>
    <% end %>
  </ul>
</div>